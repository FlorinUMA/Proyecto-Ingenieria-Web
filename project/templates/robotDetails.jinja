{# Makes use of base.jinja #}
{% extends 'base.jinja' %}

{% block head %}
{# Adds the title, stylesheet links and favicon #}

<title>Robots</title>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<script src="{{url_for('static',filename='js/changeReturn.js')}}"></script>

{% endblock %}

{%block navbar%}
<div class="collapse navbar-collapse" id="menuItems">
  <ul class="navbar-nav me-auto">
    <li class="nav-item">
      <a href="/tecnico" class="nav-link">Volver a t√©cnico</a>
    </li>
  </ul>
</div>
{% endblock %}

{% block content%}
<script>custom_return("{{user}}")</script>


<div class="container-fluid my-5 px-5">

  <h2 class="mini_title">Tareas de {{robot.nombre}}</h2>

  <div>
    <button class="btn btn-primary" OnClick="location.href='nueva-tarea'">Crear nueva tarea</button>
  </div>

  <br>

  <table class="table table-dark" style="width: 85%;">
    <thead class="thead-dark">
      <tr>
        <th scope="col">Id Tarea</th>
        <th scope="col">Nombre</th>
        <th scope="col">Estado</th>
        <th scope="col">Ejecutada por</th>
      </tr>
    </thead>
    <tbody>
      {% for i in row %}
      <tr>
        <td>{{i.id}}</td>
        <td>{{i.nombre}}</td>
        <td>{{i.estado_id|muestraEstado()}}</td>
        <td>{{i.ejecutaMedico}}</td>
      </tr>
      {% endfor %}
    </tbody>
  </table>
</div>

{% endblock %}